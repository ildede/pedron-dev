---
import "../styles/reset.css"
import "@picocss/pico"
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Davide Pedron - Portfolio</title>
    <style>
        html {
            background: linear-gradient(to bottom, var(--pdr-primary-blue), var(--pdr-primary-blue), white)
        }

        :root, :host {
            --pico-nav-element-spacing-vertical: .5rem;
            --pico-block-spacing-vertical: 0rem;
            --pdr-primary-blue: #1a3e75;
            --pdr-lighter-blue: #3a5885;
            --pdr-accent-red: #e63946;
            --pdr-accent-yellow: #ffd166;
            --pdr-primary-text: #f3f4f7;
        }
    </style>
</head>
<body>

<Header/>

<main>
    <slot/>
</main>

<Footer/>

</body>
</html>