---
const { imgSrc, imgAlt, title, description, sourceCode, playHere } = Astro.props;
---
<div class="project-card">
    <div class="project-img">
        <img src={imgSrc} alt={imgAlt} width="400" height="200">
    </div>
    <div class="project-info">
        <h3 class="project-title">{title}</h3>
        <p>{description}</p>
        <div class="project-links">
            {sourceCode && <a href=`${sourceCode}` target="_blank">Source code</a>}
            <a href={playHere}>Play</a>
        </div>
    </div>
</div>

<style>
    .project-card {
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

    .project-card:hover {
        transform: translateY(-10px);
    }

    .project-img {
        height: 200px;
        overflow: hidden;
    }

    .project-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .project-card:hover .project-img img {
        transform: scale(1.05);
    }

    .project-info {
        padding: 1.5rem;
        * {
            color: var(--pdr-lighter-blue);
        }
    }

    .project-title {
        color: var(--pdr-primary-blue);
        margin-bottom: 0.5rem;
    }

    .project-links a {
        color: var(--pdr-accent-red);
        text-decoration: none;
        margin-right: 1rem;
        font-weight: bold;
        transition: color 0.3s;
    }

    .project-links a:hover {
        color: rgba(0, 0, 0, 0.1);
    }
</style>